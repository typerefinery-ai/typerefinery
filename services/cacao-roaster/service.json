{
  "id": "cacao-roaster",
  "name": "COCAO Roaster",
  "version": "1.3.0",
  "description": "Node based file manager",
  "enabled": true,
  "status": "30",
  "logoutput": "",
  "icon": "pi pi-globe",
  "servicelocation": 10,
  "execconfig": {
    "setuparchive": {
      "win32": {
        "name": "cacao-roaster-1.3.0.zip",
        "output": "cacao-roaster"
      }
    },
    "execshell": true,
    "execcwd": "${SERVICE_HOME}\\win32\\cacao-roaster\\cacao-roaster-1.3.0",
    "setup": {
      "win32": ["rmdir /s /q .husky",
                "npm install",
                "npx husky uninstall",
                "npm uninstall husky",
                "npm install serve --save-dev"              ],
      "darwin": ["; ${NODE} ${NODE_HOME}\\node_modules\\npm\\bin\\npm-cli.js install"],
      "linux": ["; ${NODE} ${NODE_HOME}\\node_modules\\npm\\bin\\npm-cli.js} install"],
      "default": ["node -e \"require('child_process').exec('npm install', (e, so, se) => { if(e) throw e; console.log(so); console.error(se); })\"",
                "npm serve --save-dev"]
    },
    "executable": {
      "win32": "npx",
      "darwin": "npx",
      "linux": "npx",
      "default": "npx"
    },
    "datapath": "./data",
    "env": {
      "SOARCA_END_POINT": "${SOARCA_HOST_URL}",
      "PATH": [
        "${NODE_HOME}"
      ]
    },
    "globalenv": {
      "COCAO_ROASTER_HOST_URL": "http://localhost:${SERVICE_PORT}",
      "CACAO_ROASTER_PORT": "${SERVICE_PORT}"
    },
    "commandline": {
      "win32": " serve . -l ${SERVICE_PORT}",
      "darwin": " serve . -l ${SERVICE_PORT}",
      "linux": " serve . -l ${SERVICE_PORT}",
      "default": " serve . -l ${SERVICE_PORT}"
    },
    "serviceport": 8990,
    "healthcheck": {
      "type": "http",
      "url": "http://${SERVICE_HOST}:${SERVICE_PORT}/",
      "expected_status": 200,
      "retries": 180
    },
    "depend_on": [
      "node",
      "soarca"
    ]
  }
}
